config { 
  type: "view",
  materialized: true
}

select 
  XV.ID_COLIGADA 
  ,XV.ID_VENDA
  ,VP.NUM_PARCELA
  ,XE.NOM_EMPREENDIMENTO
  ,XV.ID_SITUACAO_VENDA
  ,SUM(LAN.VLR_ORIGINAL) AS VLR_ORIGINAL
  ,SUM(LAN.VLR_BAIXA)    AS VLR_BAIXA
  ,SUM(LAN.VLR_AUXILIAR) AS VLR_AUXILIAR
from `bronze.C_VW_XVENDA` AS XV
INNER JOIN `bronze.C_VW_XEMPREENDIMENTO` AS XE ON XE.ID_PESS_EMPR = XV.ID_PESS_EMPR 
INNER JOIN `bronze.T_VW_XVENDAPARCELA`   AS VP ON VP.ID_VENDA = XV.ID_VENDA
INNER JOIN `bronze.T_VW_FLAN`            AS LAN ON LAN.ID_LAN = VP.ID_LAN AND VP.ID_COLIGADA = LAN.ID_COLIGADA 
GROUP BY 1,2,3,4,5